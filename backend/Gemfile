source "https://rubygems.org"

# Core Rails
gem "rails", "~> 8.1.1"
gem "pg", "~> 1.1"
gem "puma", ">= 5.0"

# Windows timezone data
gem "tzinfo-data", platforms: %i[windows jruby]

# Solid adapters for Rails.cache, Active Job, and Action Cable
gem "solid_cache"
gem "solid_queue"
gem "solid_cable"

# Performance
gem "bootsnap", require: false

# Deployment
gem "kamal", require: false
gem "thruster", require: false

# CORS for frontend requests
gem "rack-cors"

# Authentication
gem "devise", "~> 4.9"
gem "devise-jwt", "~> 0.11"

# Authorization
gem "pundit", "~> 2.3"

# Rate limiting
gem "rack-attack", "~> 6.7"

# Serialization
gem "active_model_serializers", "~> 0.10"

# Payments
gem "stripe", "~> 10.0"
gem "razorpay", "~> 3.0"

# Background jobs
gem "sidekiq", "~> 7.0"

# File uploads
gem "aws-sdk-s3", require: false  # For S3-compatible storage (optional)

# Environment variables
gem "dotenv-rails", groups: [:development, :test]

# Password hashing (required by Devise)
gem "bcrypt", "~> 3.1"

group :development, :test do
  gem "debug", platforms: %i[mri windows], require: "debug/prelude"
  gem "bundler-audit", require: false
  gem "brakeman", require: false
  gem "rubocop-rails-omakase", require: false
  
  # Testing
  gem "rspec-rails", "~> 6.0"
  gem "factory_bot_rails", "~> 6.0"
  gem "faker", "~> 3.0"
  gem "shoulda-matchers", "~> 5.0"
end

group :test do
  gem "database_cleaner-active_record"
  gem "webmock", "~> 3.0"
end
