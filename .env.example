# ===========================================
# NomadHire Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials

# ===========================================
# Backend (Rails)
# ===========================================

# Database
DATABASE_URL=postgres://user:password@localhost:5432/nomadhire_development

# Rails
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_rails_secret
DEVISE_JWT_SECRET=your_devise_jwt_secret_here

# CORS - Frontend URL
FRONTEND_URL=http://localhost:5173

# Stripe (Test Keys Only!)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay (Sandbox Keys Only!)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Redis (optional, for Sidekiq background jobs)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Frontend (SvelteKit)
# ===========================================

# API URL
VITE_API_URL=http://localhost:3001/api/v1

# WebSocket URL
VITE_WS_URL=ws://localhost:3001/cable

# Stripe Publishable Key (safe for frontend)
VITE_STRIPE_KEY=pk_test_your_stripe_publishable_key

# Razorpay Key ID (safe for frontend)
VITE_RAZORPAY_KEY=rzp_test_your_key_id
